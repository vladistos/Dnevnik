<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:divider="@drawable/divider_for_linear_layout"
    android:showDividers="end"
    android:background="?selectableItemBackground"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:id="@+id/header_title_in_wall_feed_element"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:id="@+id/avatar_card_in_wall_post_item"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/avatar_in_wall_post_item"
                    android:layout_alignParentStart="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/author_in_wall_post_item"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:layout_toStartOf="@id/views_in_wall_post_item"
                android:layout_toEndOf="@+id/avatar_card_in_wall_post_item"
                android:gravity="top"
                android:textColor="#C9000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:visibility="gone"
                android:id="@+id/views_in_wall_post_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:drawablePadding="5sp"
                android:gravity="center"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:textColor="#C6232323"
                android:textSize="15sp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_baseline_remove_red_eye_24" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_in_wall_post_item"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"/>


        <TextView
            android:textColor="#D5000000"
            android:id="@+id/content_in_wall_post_item"
            android:gravity="start"
            android:linksClickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:autoLink="web"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ru.vladik.myapplication.Views.SelectableGridView
            android:id="@+id/emoji_count_layout_in_wall_post_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@+id/comments_text_view_in_wall_post_item"
            android:columnWidth="40dp"
            android:nestedScrollingEnabled="true"
            android:numColumns="auto_fit"
            android:padding="5dp"
            android:stretchMode="columnWidth"
            android:textSize="15sp"
            app:selected_item_background="@drawable/sekected_item_shape" />

        <TextView
            android:id="@+id/comments_text_view_in_wall_post_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/ic_baseline_comment_24" />
    </RelativeLayout>

</LinearLayout>