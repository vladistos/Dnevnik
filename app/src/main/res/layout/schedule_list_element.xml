<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="?colorOnPrimary"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/schedule_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/subject_name_in_schedule_item"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/subject_time_in_schedule_item"
                android:textColor="#C9000000"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/subject_time_in_schedule_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:textSize="15sp"
                android:textColor="#C6232323"/>

            <TextView
                android:layout_below="@id/subject_name_in_schedule_item"
                android:id="@+id/subject_text_in_schedule_item"
                android:layout_toStartOf="@+id/marks_in_schedule_item"
                android:layout_alignParentStart="true"
                android:linksClickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/marks_in_schedule_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_below="@+id/subject_time_in_schedule_item"
                android:layout_margin="10dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>